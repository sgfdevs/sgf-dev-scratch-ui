@{
    var request = Context.Request;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    @if (request.QueryString.ToString().Contains("horse_build"))
    {
        <link rel="stylesheet" href="/css/styles.css" asp-append-version="true" />   
    }

    @RenderSection("TopScripts", required: false)

    
</head>
<body>

    <header class="site_header">
        <div class="container">
            <a href="/"><img src="/images/logo.svg" alt="Springfield Devs Logo"></a>
        </div>
    </header>

    @RenderBody()

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/plugins.js" asp-append-version="true"></script>
<script src="~/js/main.js" asp-append-version="true"></script>

<environment include="Development">
    @if (!request.QueryString.ToString().Contains("horse_build"))
    {
        <script src="~/horse.js"></script>   
    }
</environment>

@RenderSection("Scripts", required: false)

</body>
</html>
