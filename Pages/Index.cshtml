@page
@{
    ViewData["Title"] = "Springfield Devs";
}

<section class="dev_night_banner">
    <time datetime="06-10-2020 18:00:00"><span>Oct 7, 2020</span></time>
    <div class="headline">
        <img src="/images/headlines/dev_night.svg" alt="Dev Night">
    </div>
    
    <ul class="presentations_3">
        <li>
            <figure>
                <img src="/images/members/tim_franklin.jpg" alt="Tim Franklin">
            </figure>
            
            <h3>Tailwind CSS</h3>
            
            <dl>
                <dt>Presented By</dt>
                <dd><a href="#">Tim Franklin</a></dd>
            </dl>

            <dl>
                <dt>From</dt>
                <dd><a href="#">Frontend Design</a></dd>
            </dl>
        </li>
        
        <li>
            <figure>
                <img src="/images/members/nick_landreville.png" alt="Nick Landreville">
            </figure>
                    
            <h3>Open Source for All</h3>
                    
            <dl>
                <dt>Presented By</dt>
                <dd><a href="#">Nick Landreville</a></dd>
            </dl>
                    
            <dl>
                <dt>From</dt>
                <dd><a href="#">Springfield Devs</a></dd>
            </dl>
        </li>
        
        <li>
            <figure>
                <img src="/images/members/enoch_bradshaw.jpg" alt="Enoch Bradshaw">
            </figure>
                    
            <h3>Introduction to Unity</h3>
                    
            <dl>
                <dt>Presented By</dt>
                <dd><a href="#">Enoch Bradshaw</a></dd>
            </dl>
                    
            <dl>
                <dt>From</dt>
                <dd><a href="#">.NET User Group</a></dd>
            </dl>
        </li>
    </ul>
</section>

<section class="upcoming_events">
    <header>
        <span>Upcoming</span>
        <img src="/images/headlines/events.svg" alt="Upcoming Events">
    </header>
    
    <div class="scroll_list">
        <ul>
            @for (int i = 0; i < 4; i++)
            {
                <li>
                    <a href="#">
                        <figure>
                            <img src="/images/event_method.png" alt="Method">
                        </figure>
        
                        <div class="content">
                            <div class="details">
                                <h3>Method Conf 2021</h3>
                                <h4>Springfield, MO</h4>
                                <time datetime="04-28-2020">Oct <span>28</span></time>
                            </div>
                                
                            <footer>
                                <div class="host">By <span>Springfield Devs</span></div>
                                <div class="price">$100</div>
                            </footer>
                        </div>
                    </a>
                </li>   
            }
        </ul>
    </div>
    
    <footer>
        <a href="#">See All Events</a>
    </footer>
</section>

